@using AIUI2025.Services
@using System.Threading
@inject MarketDataService MarketData
@implements IDisposable

@if (patterns == null)
{
    <p>Loading...</p>
}
else if (patterns.Count == 0)
{
    <p>No patterns detected.</p>
}
else
{
    <table class="pattern-table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Time</th>
                <th>Confidence</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in patterns)
            {
                <tr class="@GetRowClass(p.Type)">
                    <td>@p.Type</td>
                    <td>@p.Time.ToLocalTime().ToString("HH:mm:ss")</td>
                    <td>@p.Confidence.ToString("P0")</td>
                    <td>@p.Score.ToString("F4")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ScoredPattern>? patterns;
    private Timer? _refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatternsAsync();

        // Start timer to refresh every 30 seconds
        _refreshTimer = new Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadPatternsAsync();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
    }

    private async Task LoadPatternsAsync()
    {
        var now = DateTime.UtcNow.ToLocalTime();
        var start = now.AddMinutes(-30);
        var end = now;

        var candles = await MarketData.GetCandlesAsync(start, end);
        var signals = SignalService.ExtractSignals(candles, new StrategyConfig());
        patterns = await PatternService.GetScoredPatternsAsync(candles);
        PatternService.GetSummary(candles);
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    private string GetRowClass(string type) =>
        type.Contains("Bullish") ? "bullish-row" : "bearish-row";
}